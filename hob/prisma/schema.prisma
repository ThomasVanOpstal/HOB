// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Service {
  id Int @id @default(autoincrement())
  Category Category @default(Beauty)
  Subcategory String 
  Type String
  name String
  Description String
  Price Float?
  Image ServiceImage[]
  Time Int?
  Options ServiceOption[]
  Treatments ServiceTreatment[]
  isAvailable Boolean @default(true)

}

model Image {
  id Int @id @default(autoincrement())
  Url String
  Alt String
  Bg String?
  W Int
  H Int
  BlurDataUrl String
  Service ServiceImage[]
  Option OptionImage[]

}
model Option {
  id Int @id @default(autoincrement())
  Category Category @default(Beauty)
  Subcategory String[]
  type String?
  Description String
  Price Float[] //[short, medium, long]
  Image OptionImage[]
  Name String
  Time Int[] //[short, medium, long]
  Service ServiceOption[]
  Treatment OptionTreatment[]
  isAvailable Boolean @default(true)
}
model ServiceOption{
  service    Service     @relation(fields: [serviceId], references: [id])
  serviceId  Int 
  Option   Option @relation(fields: [optionId], references: [id])
  optionId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([serviceId, optionId])
}
enum Category {
  Beauty
  Skin
  Body 
}

model Treatment {
  id Int @id @default(autoincrement())
  price Float
  name String
  Time Int
  description String
  Service ServiceTreatment[]
  Option OptionTreatment[]

}
model ServiceTreatment{
  service    Service     @relation(fields: [serviceId], references: [id])
  serviceId  Int 
  Treatment   Treatment @relation(fields: [treatmentId], references: [id])
  treatmentId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([serviceId, treatmentId])
}
model OptionTreatment{
  option    Option     @relation(fields: [optionId], references: [id])
  optionId  Int 
  Treatment   Treatment @relation(fields: [treatmentId], references: [id])
  treatmentId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([optionId, treatmentId])
}
model ServiceImage {
  service    Service @relation(fields: [serviceId], references: [id])
  serviceId  Int 
  Image   Image @relation(fields: [imageId], references: [id])
  imageId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([serviceId, imageId])
}
model OptionImage{
  option    Option     @relation(fields: [optionId], references: [id])
  optionId  Int 
  Image   Image @relation(fields: [imageId], references: [id])
  imageId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([optionId, imageId])
}